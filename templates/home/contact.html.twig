{% extends 'base.html.twig' %}

{% block title %}Contactez-nous{% endblock %}

{% block body %}
    <!-- Contact Section -->
  <div id="contact" class="text-center">
    <div class="container text-center">
      <div class="col-md-4">
        <h3>Reservation</h3>
        <div class="contact-item">
          <p>Appellez au</p>
          <p>+33(0)1 45 75 45 85</p>
        </div>
      </div>
      <div class="col-md-4">
        <h3>Adresse</h3>
        <div class="contact-item">
          <p>54 avenue de la Republique</p>
          <p>Paris, 75002</p>
        </div>
      </div>
      <div class="col-md-4">
        <h3>Horraires d'ouverture</h3>
        <div class="contact-item">
          <p>Mardi-Vendredi : 11h00  - 22h30</p>
          <p>Samedi-Dimanche : 11h00 - 23h00</p>
        </div>
      </div>
    </div>
    
    <div class="container" id="content-form-contact">
      <div class="section-title text-center">
        <h3>Besoin de plus d'information ? Ecrivez-nous !</h3>
      </div>
      {% for message in app.flashes('success') %}  
        <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}                
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}
    
      {# Formulaire de contact #}
      <div class="col-md-8 col-md-offset-4">
        <form method="POST">
          <div class="row">
            <div class="col-md-6 form-group">
              <label id="nom">Nom</label>
              <input type="text" class="form-control" for="nom" name="nom">
            </div>
          </div>
          <div class="row">
            <div class="col-md-6 form-group">
              <label id="prenom">Prenom</label>
              <input type="text" class="form-control" for="prenom" name="prenom">
            </div>
          </div>
          <div class="row">
            <div class="col-md-6 form-group">
              <label id="message">Message</label>
              <textarea class="form-control" for="message" name="message" rows="5"></textarea>
            </div>
          </div>
          <button style="position: relative; right: 25%;" class="btn btn-danger" type="submit" name="contacter">Contacter</button>
        </form>
      </div> 
    </div>
  </div>
  {# <h1>Autre form</h1>
    {% if not form.vars.valid %}
        <div class="alert alert-danger">erreur au niveau du formulaiiiire</div>
      {% endif %}
    {{ form_start(form) }}
    {{ form_rest(form) }}
    <div class="form-group">
      <button class="btn btn-primary">Envoyer</button>
    </div>
    {{ form_end(form) }}
  </div> #}
{% endblock %}

