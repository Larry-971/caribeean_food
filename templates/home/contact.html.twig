{% extends 'base.html.twig' %}

{% block title %}Contactez-nous{% endblock %}

{% block body %}
    <!-- Contact Section -->
  <div id="contact" class="text-center">

    {% for message in app.flashes('success') %}  
        <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}                
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
      {% endfor %}

      {% if not form.vars.valid %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                Désolé votre message n'as pas pu être transmis suite à une erreur ! Veuillez réessayez svp.              
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
      {% endif %}

    <div class="container text-center">
      <div class="col-md-4">
        <h3>Reservation</h3>
        <div class="contact-item">
          <p>Appellez au</p>
          <p>+33(0)1 45 75 45 85</p>
        </div>
      </div>
      <div class="col-md-4">
        <h3>Adresse</h3>
        <div class="contact-item">
          <p>54 avenue de la Republique</p>
          <p>Paris, 75002</p>
        </div>
      </div>
      <div class="col-md-4">
        <h3>Horraires d'ouverture</h3>
        <div class="contact-item">
          <p>Mardi-Vendredi : 11h00  - 22h30</p>
          <p>Samedi-Dimanche : 11h00 - 23h00</p>
        </div>
      </div>
    </div>
    
    <div class="container" id="content-form-contact">
      <div class="section-title text-center">
        <h3>Besoin de plus d'information ? Ecrivez-nous !</h3>
      </div>
      
      {# Formulaire de contact #}
      <div class="col-md-8 col-md-offset-4">
        {{ form_start(form) }}
          <div class="row">
            <div class="col-md-6 form-group">
              {{ form_row(form.nom)}}                           
            </div>
          </div>
          <div class="row">
            <div class="col-md-6 form-group">
              {{ form_row(form.prenom)}}                                          
            </div>
          </div>
          <div class="row">
            <div class="col-md-6 form-group">
              {{ form_row(form.email)}}                                          
            </div>
          </div>
          <div class="row">
            <div class="col-md-6 form-group">
              {{ form_row(form.message)}}                                          
              {# rows="5" #}
            </div>
          </div>
          <button style="position: relative; right: 25%;" class="btn btn-danger" type="submit" name="contacter">Contacter</button>
        {{ form_end(form) }}        
      </div> 
    </div>
  </div>
  <style>
    .fade {
      opacity: 1;
    }
  </style>
{% endblock %}

